{
  "name": "@murbanczyk-fp/ngx-gallery",
  "version": "17.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build @murbanczyk-fp/ngx-gallery && ng build gallery-app",
    "build-prod": "ng build --configuration production @murbanczyk-fp/ngx-gallery && ng build --configuration production gallery-app",
    "test": "ng test",
    "lint:lib": "ng lint @murbanczyk-fp/ngx-gallery",
    "build-watch:lib": "ng build @murbanczyk-fp/ngx-gallery --watch",
    "test:lib": "ng test @murbanczyk-fp/ngx-gallery",
    "build:lib": "ng build --configuration production @murbanczyk-fp/ngx-gallery",
    "publish:lib": "npm run copy:readme && npm run copy:changelog && npm run copy:license && npm publish ./dist/gallery --access public",
    "copy:readme": "cpx README.md dist/gallery",
    "copy:changelog": "cpx CHANGELOG.md dist/gallery",
    "copy:license": "cpx LICENSE dist/gallery",
    "test-ci": "ng test @murbanczyk-fp/ngx-gallery --code-coverage --watch=false --browsers=ChromeHeadless"
  },
  "private": false,
